{
  "name": "ch8",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "node server",
    "dev-full": "vite && cd backend/ && npm start && cd ..",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build --outDir dist/client",
    "build:server": "vite build --outDir dist/server --ssr src/entry-server.jsx",
    "lint": "eslint src",
    "preview": "vite preview",
    "prepare": "husky",
    "start": "cross-env NODE_ENV=production node server",
    "e2e": "concurrently \"npm run e2e:client\" \"npm run e2e:server\"",
    "e2e:client": "npm run build && npm run start",
    "e2e:server": "cd backend/ && npm run e2e"
  },
  "dependencies": {
    "@apollo/client": "^3.13.8",
    "@tanstack/react-query": "^5.73.3",
    "compression": "^1.8.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "graphql": "^16.11.0",
    "jwt-decode": "^4.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-helmet-async": "^2.0.5",
    "react-router-dom": "^6.30.1",
    "slug": "^11.0.0",
    "victory": "^37.3.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@eslint/js": "^9.17.0",
    "@playwright/test": "^1.52.0",
    "@types/node": "^22.15.29",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "lint-staged": "^13.3.0",
    "prettier": "^3.4.2",
    "vite": "^6.0.5"
  },
  "lint-staged": {
    "**/*.{js, jsx}": [
      "npx prettier --write",
      "npx eslint --config eslint.config.mjs --fix"
    ]
  }
}
